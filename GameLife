  <script>
    // Sauvegarde XP dans localStorage
    let xp = JSON.parse(localStorage.getItem("xp")) || {finance:0, sport:0, dev:0, spirit:0};

    function showSection(id){
      document.querySelectorAll("section").forEach(s=>s.classList.remove("active"));
      document.getElementById(id).classList.add("active");
    }

    function gainXP(type, amount){
      xp[type]+=amount;
      updateBars();
      localStorage.setItem("xp", JSON.stringify(xp));
    }

    function updateBars(){
      document.getElementById("financeXP").innerText = xp.finance;
      document.getElementById("sportXP").innerText = xp.sport;
      document.getElementById("devXP").innerText = xp.dev;
      document.getElementById("spiritXP").innerText = xp.spirit;

      document.getElementById("financeBar").style.width = xp.finance+"%";
      document.getElementById("sportBar").style.width = xp.sport+"%";
      document.getElementById("devBar").style.width = xp.dev+"%";
      document.getElementById("spiritBar").style.width = xp.spirit+"%";
    }

    updateBars();
  </script>
